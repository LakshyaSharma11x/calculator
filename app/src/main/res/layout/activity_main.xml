<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="408dp"
        android:layout_height="286dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/B1"
                style="@style/BUTTON"
                android:text="1">


            </Button>

            <Button
                android:id="@+id/B2"
                style="@style/BUTTON"
                android:text="2">

            </Button>

            <Button
                android:id="@+id/B3"
                style="@style/BUTTON"
                android:text="3">

            </Button>

            <Button
                android:id="@+id/A_ADD"
                style="@style/BUTTON"
                android:text="+">

            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/B4"
                style="@style/BUTTON"
                android:text="4">

            </Button>

            <Button
                android:id="@+id/B5"
                style="@style/BUTTON"
                android:text="5">

            </Button>

            <Button
                android:id="@+id/B6"
                style="@style/BUTTON"
                android:text="6">

            </Button>

            <Button
                android:id="@+id/B_SUB"
                style="@style/BUTTON"
                android:text="-">

            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/B7"
                style="@style/BUTTON"
                android:text="7">

            </Button>

            <Button
                android:id="@+id/B8"
                style="@style/BUTTON"
                android:text="8">

            </Button>

            <Button
                android:id="@+id/B9"
                style="@style/BUTTON"
                android:text="9">

            </Button>

            <Button
                android:id="@+id/B_MUL"
                style="@style/BUTTON"
                android:text="*">

            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="@style/BUTTON"
                android:text="^">

            </Button>

            <Button
                android:id="@+id/B0"
                style="@style/BUTTON"
                android:text="0">

            </Button>

            <Button
                style="@style/BUTTON"
                android:text="a">

            </Button>

            <Button
                android:id="@+id/B_ANS"
                style="@style/BUTTON"
                android:text="=">

            </Button>
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/e"
        android:layout_width="364dp"
        android:layout_height="208dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>